{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
